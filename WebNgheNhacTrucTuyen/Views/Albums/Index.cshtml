@model IEnumerable<WebNgheNhacTrucTuyen.Models.Album>

<h1>Albums</h1>

<a asp-action="A_Create" class="btn btn-primary">Create New Album</a>

<table class="table">
    <thead>
        <tr>
            <th>Cover</th>
            <th>Album Name</th>
            <th>Description</th>
            <th>Owner</th>
            <th>Songs Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <!-- Hiển thị ảnh bìa -->
                <td>
                    @if (!string.IsNullOrEmpty(album.A_CoverImagePath))
                    {
                        <img src="@album.A_CoverImagePath" alt="@album.A_Name" width="100" />
                    }
                    else
                    {
                        <span>No Cover</span>
                    }
                </td>

                <!-- Tên album -->
                <td>@album.A_Name</td>

                <!-- Mô tả album -->
                <td>@album.A_Description</td>

                <!-- Chủ sở hữu album -->
                <td>
                    @if (album.Artist != null)
                    {
                        <span>Artist: @album.Artist.ART_Name</span>
                    }
                    else if (!string.IsNullOrEmpty(album.UserId))
                    {
                        <span>User: @album.User.U_FullName</span>
                    }
                    else
                    {
                        <span>Unknown</span>
                    }
                </td>

                <!-- Số lượng bài hát -->
                <td>@album.Songs.Count</td>

                <!-- Các hành động -->
                <td>
                    <a asp-action="AddSong" asp-route-albumId="@album.A_Id" class="btn btn-success">Add Songs</a>
                    <a asp-action="Details" asp-route-id="@album.A_Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@album.A_Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@album.A_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
