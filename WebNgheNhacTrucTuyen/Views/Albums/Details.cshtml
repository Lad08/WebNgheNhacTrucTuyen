@model WebNgheNhacTrucTuyen.Models.Album

<h2>Chi tiết Album: @Model.A_Name</h2>

<div class="mb-3">
    <strong>Mô tả:</strong>
    <p>@Model.A_Description</p>
</div>

@if (!string.IsNullOrEmpty(Model.A_CoverImagePath))
{
    <div class="mb-3">
        <strong>Ảnh bìa:</strong>
        <img src="@Model.A_CoverImagePath" alt="Ảnh bìa album" style="max-width: 300px;" />
    </div>
}

<h3>Danh sách bài hát</h3>

@if (Model.Songs != null && Model.Songs.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên bài hát</th>
                <th>Nghệ sĩ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var song in Model.Songs)
            {
                <tr>
                    <td>@index</td>
                    <td>@song.S_Title</td>
                    <td>@song.Artist?.ART_Name</td>
                    <td>
                        <form asp-action="RemoveSong" method="post" style="display: inline;">
                            <input type="hidden" name="albumId" value="@Model.A_Id" />
                            <input type="hidden" name="songId" value="@song.S_Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
}
else
{
    <p>Album này chưa có bài hát nào.</p>
}

<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách album</a>
