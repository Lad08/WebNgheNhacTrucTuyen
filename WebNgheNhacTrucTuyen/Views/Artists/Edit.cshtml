@model WebNgheNhacTrucTuyen.Models.Artists

<h2>Chỉnh sửa thông tin nghệ sĩ</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ART_Id" />

    <div class="form-group">
        <label asp-for="ART_Name" class="control-label">Tên nghệ sĩ</label>
        <input asp-for="ART_Name" class="form-control" />
        <span asp-validation-for="ART_Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ART_Description" class="control-label">Mô tả</label>
        <textarea asp-for="ART_Description" class="form-control"></textarea>
        <span asp-validation-for="ART_Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ART_ImageFile">Hình ảnh</label>
        <input type="file" name="ART_ImageFile" class="form-control" />
        <p>Ảnh hiện tại: <img src="/images/artists/@Model.ART_Image" alt="@Model.ART_Name" width="100" /></p>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
