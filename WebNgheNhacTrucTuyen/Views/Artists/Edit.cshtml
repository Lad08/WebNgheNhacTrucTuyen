@model WebNgheNhacTrucTuyen.Models.Artists

@{
    ViewData["Title"] = "Chỉnh sửa Nghệ sĩ";
    Layout = "~/Views/Shared/_AlbumLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ART_Id" />

    <div class="form-group" style="width: 70%;">
        <label asp-for="ART_Name" class="control-label">Tên nghệ sĩ</label>
        <input asp-for="ART_Name" class="form-control" />
        <span asp-validation-for="ART_Name" class="text-danger"></span>
    </div>

    <div class="form-group" style="width: 70%;">
        <label asp-for="ART_Description" class="control-label">Mô tả</label>
        <textarea asp-for="ART_Description" class="form-control"></textarea>
        <span asp-validation-for="ART_Description" class="text-danger"></span>
    </div>

    <div class="form-group" style="width: 70%;">
        <label for="ART_ImageFile" class="control-label">Hình ảnh mới (nếu có)</label>
        <input type="file" name="ART_ImageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ART_Image))
        {
            <div class="mt-3">
                <label>Ảnh hiện tại:</label>
                <div>
                    <img src="/images/artists/@Model.ART_Image" alt="@Model.ART_Name" style="max-width: 200px;" />
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-3">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
