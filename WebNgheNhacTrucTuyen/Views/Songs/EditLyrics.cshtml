@model WebNgheNhacTrucTuyen.ViewModels.UploadLyricsViewModel

@{
    ViewData["Title"] = "Edit Lyrics";
}

<h2>Edit Lyrics</h2>

<form asp-action="EditLyrics" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="SongId" />

    <div class="form-group">
        <label for="ExistingFilePath">File hiện tại:</label>
        @if (!string.IsNullOrEmpty(Model.ExistingFilePath))
        {
            <p><a href="@Model.ExistingFilePath" target="_blank">Xem file lyrics</a></p>
        }
        else
        {
            <p>Chưa có file lyrics.</p>
        }
    </div>

    <div class="form-group">
        <label for="File">Thay đổi file lyrics (.txt)</label>
        <input type="file" asp-for="File" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Content">Hoặc chỉnh sửa nội dung lyrics:</label>
        <textarea asp-for="Content" class="form-control" rows="5">@Model.Content</textarea>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Details" asp-route-id="@Model.SongId" class="btn btn-secondary">Hủy</a>
    </div>
</form>
