@model IEnumerable<WebNgheNhacTrucTuyen.Models.Songs>

@{
    ViewData["Title"] = "Thư viện";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container">
    <h1 class="heading-title">Thư viện Bài hát</h1>

    <div class="music-section">
        <h2 class="seclection-title1">Bài hát yêu thích</h2>
        <ul class="item-container songList">
            @if (Model != null && Model.Any(s => s.IsFavorite))
            {
                foreach (var song in Model.Where(s => s.IsFavorite))
                {
                    <li class="music-card">
                        <div>
                            <div class="img-container">
                                <img class="item-img" src="@Url.Content(song.CoverImagePath)" />
                                <button class="play-button" data-file-path="@Url.Content(song.FilePath)" data-title="@song.Title">
                                    <i class="fas fa-play"></i>
                                </button>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-id="@song.Id" class="music-name">@song.Title</a>
                            </div>
                            <div>
                                <a class="artist">@song.Artist.Name</a>
                            </div>
                            <div>
                                <form asp-action="ToggleFavorite" asp-route-id="@song.Id" method="post">
                                    <button type="submit">Bỏ yêu thích</button>
                                </form>
                            </div>
                        </div>
                    </li>
                }
            }
            else
            {
                <li>Không có bài hát yêu thích nào.</li>
            }
        </ul>
        <audio id="audioPlayer" preload="auto" loop></audio>
    </div>

    <div class="music-section">
        <h2 class="seclection-title1">Tất cả Bài hát</h2>
        <ul class="item-container songList">
            @foreach (var song in Model)
            {
                <li class="music-card">
                    <div>
                        <div class="img-container">
                            <img class="item-img" src="@Url.Content(song.CoverImagePath)" />
                            <button class="play-button" data-file-path="@Url.Content(song.FilePath)" data-title="@song.Title">
                                <i class="fas fa-play"></i>
                            </button>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-id="@song.Id" class="music-name">@song.Title</a>
                        </div>
                        <div>
                            <a class="artist">@song.Artist.Name</a>
                        </div>
                        <div>
                            <form asp-action="ToggleFavorite" asp-route-id="@song.Id" method="post">
                                <button type="submit">
                                    @(song.IsFavorite ? "Bỏ yêu thích" : "Yêu thích")
                                </button>
                            </form>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <audio id="audioPlayer" preload="auto" loop></audio>
    </div>
</div>

<!-- Play Control Section -->

<div class="play-controll">
    <section role="contentinfo" class="control-inner">

        <div class="playControls_elements">

            <button class="skipControl_previous">
            </button>

            <button id="playPauseButton" class="skipControl_play">
            </button>


            <button class="skipControl_next">
            </button>

            <div class="playControl_shuffle">
                <button class="control_shuffle">
                </button>
            </div>

            <div class="playControl_repeat">
                <button id="repeatButton" class="control_repeat">
                    <i class="fa-solid fa-repeat"></i>
                </button>
            </div>

            <div class="time-container">
                <span id="currentTime">00:00</span>

                <div class="progress-bar" id="progressBar">

                    <div class="progress-filled"></div>

                </div>
                <span id="duration">00:00</span>
            </div>

            <div id="currentSongTitle" class="current-song-title">Bài hát hiện tại: </div>
        </div>

    </section>
</div>