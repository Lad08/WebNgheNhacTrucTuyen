@model WebNgheNhacTrucTuyen.ViewModels.SearchViewModel

<h2>Kết quả tìm kiếm cho: "@Model.Query"</h2>

@if (Model.Songs != null && Model.Songs.Any())
{
    <h3>Bài hát</h3>
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li>
                <a asp-controller="Songs" asp-action="Details" asp-route-id="@song.S_Id">
                    @song.S_Title
                </a> - Nghệ sĩ: @song.Artist.ART_Name
            </li>
        }
    </ul>
}
else if (Model.Artists != null && Model.Artists.Any())
{
    <h3>Nghệ sĩ</h3>
    <ul>
        @foreach (var artist in Model.Artists)
        {
            <li>
                <a asp-controller="Artists" asp-action="Details" asp-route-id="@artist.ART_Id">
                    @artist.ART_Name
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>Không tìm thấy kết quả nào.</p>
}
