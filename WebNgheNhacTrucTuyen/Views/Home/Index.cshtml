@model IEnumerable<WebNgheNhacTrucTuyen.Models.Songs>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container">

    <h1 class="heading-title">
        Discover track and playlist
    </h1>
    <div>
        <div class="music-section">
            <div>
                <h2 class="seclection-title1">
                    Lastest music on WebsiteNgheNhac

                </h2>
            </div>
            <ul class="item-container songList">
                @foreach (var song in Model.Take(5)) // Lấy 5 bài hát đầu tiên
                {
                    <li class="music-card">
                        <div>
                            <div class="img-container">
                                <img class="item-img" src="@Url.Content(song.S_CoverImagePath)" />
                                <button class="play-button" data-file-path="@Url.Content(song.S_FilePath)" data-title="@song.S_Title"><i class="fas fa-play"></i></button>
                            </div>
                            <div>
                                <a asp-action="SongDetails" asp-route-id="@song.S_Id" class="music-name">@song.S_Title</a>
                            </div>

                            <div>
                                <a class="artist">@song.Artist.ART_Name</a>
                            </div>
                            
                            <div>
                                <button type="button" onclick="toggleFavorite(@song.S_Id)">
                                    @(song.S_IsFavorite ? "Bỏ yêu thích" : "Yêu thích")
                                </button>
                            </div>
                           
                        </div>
                    </li>
                }
            </ul>
            <audio id="audioPlayer" preload="auto"></audio>
        </div>

            <audio id="audioPlayer" preload="auto" loop></audio>
        </div>
    </div>
</div>

<!-- Play Control Section -->

<div class="play-controll">
    <section role="contentinfo" class="control-inner">

        <div class="playControls_elements">

            <button class="skipControl_previous">
            </button>

            <button id="playPauseButton" class="skipControl_play" >
            </button>


            <button class="skipControl_next">
            </button>

            <div class="playControl_shuffle">
                <button class="control_shuffle">
                </button>
            </div>

            <div class="playControl_repeat">
                <button id="repeatButton" class="control_repeat">
                    <i class="fa-solid fa-repeat"></i>
                </button>
            </div>

            <div class="time-container">
                <span id="currentTime">00:00</span>

                <div class="progress-bar" id="progressBar">
                    
                    <div class="progress-filled"></div>

                </div>
                <span id="duration">00:00</span>
            </div>

            <div class="volume-control">
                <button id="volumeButton"><i class="fa-solid fa-volume-high"></i></button>
                <input type="range" id="volumeSlider" class="volume-slider" min="0" max="1" step="0.01" value="1">
            </div>

            <div id="currentSongTitle" class="current-song-title">Bài hát hiện tại: </div>
        </div>

    </section>
</div>

