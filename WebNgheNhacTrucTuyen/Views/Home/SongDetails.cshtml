@model WebNgheNhacTrucTuyen.Models.Songs

@{
    ViewData["Title"] = "Chi tiết bài hát";
}

<h1>@Model.Title</h1>
<p>Thể loại: @Model.Genre?.G_Name</p>
<p><strong>Nghệ sĩ:</strong> @Model.Artist</p>
<p><strong>Ngày đăng tải phát hành:</strong>@Model.UploadDate </p>
<p>Uploaded by: @Model.User.FullName</p>

<audio controls>
    <source src="@Url.Content(Model.FilePath)" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

<h3>Lyrics:</h3>
@if (ViewBag.LyricsContent != null)
{
    <pre>@ViewBag.LyricsContent</pre>
}
else
{
    <p><em>Chưa có lyrics nào được tải lên.</em></p>
}

<h3>Tải lên Lyrics:</h3>
<form asp-action="UploadLyrics" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.Id" />
    <div>
        <input type="file" name="file" accept=".txt" />
    </div>
    <button type="submit">Tải lên</button>
</form>

@if (TempData["Message"] != null)
{
    <p style="color: green;">@TempData["Message"]</p>
}
