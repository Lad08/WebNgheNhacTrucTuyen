@model WebNgheNhacTrucTuyen.Models.Genres

<h2>Edit Genre</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="G_Id" />
    <div class="form-group">
        <label asp-for="G_Name" class="control-label"></label>
        <input asp-for="G_Name" class="form-control" />
        <span asp-validation-for="G_Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
