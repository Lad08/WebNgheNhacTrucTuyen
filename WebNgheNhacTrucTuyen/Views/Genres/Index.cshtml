@{
    Layout = "~/Views/Shared/_AlbumLayout.cshtml";
}

<h1>Danh sách thể loại</h1>

<a asp-action="Create" class="btn btn-primary">Thêm thể loại</a>

<table class="table">
    <thead>
        <tr>
            <th>ID thể loại </th>
            <th>Tên thể loại</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.G_Id</td>
                <td>@genre.G_Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@genre.G_Id" class="btn btn-primary ">Edit</a>
                    <form asp-action="Delete" asp-controller="Genres" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@genre.G_Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa artist này?');">
                            Xóa
                        </button>
                    </form>
                    <a asp-action="Details" asp-route-id="@genre.G_Id" class="btn btn-info">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
