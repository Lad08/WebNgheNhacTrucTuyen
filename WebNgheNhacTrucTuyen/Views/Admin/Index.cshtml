@using WebNgheNhacTrucTuyen.ViewModels
@model List<UserRoleViewModel>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <form asp-action="BlockUser" asp-route-id="@user.UserId" method="post" style="display:inline;">
                        <button type="submit" class="btn @(user.IsBlocked ? "btn-warning" : "btn-success")">
                            @(user.IsBlocked ? "Unblock" : "Block")
                        </button>
                    </form>
                    <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
