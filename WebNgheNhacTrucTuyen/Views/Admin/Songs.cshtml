@model IEnumerable<WebNgheNhacTrucTuyen.Models.Songs>

<h1>Danh Sách Bài Hát</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Tiêu Đề</th>
            <th>Ca Sĩ</th>
            <th>Thể Loại</th>
            <th>Album</th>
            <th>Người Tải Lên</th>
            <th>Ngày Tải Lên</th>
            <th>Yêu Thích</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.Id</td>
                <td>@song.Title</td>
                <td>@song.Artist?.Name</td>
                <td>@song.Genre?.G_Name</td>
                <td>@song.Album?.A_Name </td>
                <td>@song.User?.FullName</td>
                <td>@song.UploadDate.ToString("dd/MM/yyyy")</td>
                <td>@(song.IsFavorite ? "Có" : "Không")</td>
                <td>
                    <a asp-action="EditSong" asp-route-id="@song.Id" class="btn btn-warning">Sửa</a>
                    <form asp-action="DeleteSong" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@song.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this song?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
