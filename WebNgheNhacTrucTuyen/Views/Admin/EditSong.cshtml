@model WebNgheNhacTrucTuyen.ViewModels.EditSongViewModel

<h2>Edit Song</h2>

<form asp-action="EditSong" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>



    <div class="form-group">
        <label asp-for="ArtistName"></label>
        <input asp-for="ArtistName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GenreId"></label>
        <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres"></select>
    </div>

    <div class="form-group">
        <label asp-for="AlbumId"></label>
        <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.Albums"></select>
    </div>



    <button type="submit" class="btn btn-primary">Save</button>
</form>
